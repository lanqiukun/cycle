page {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container {
  background-color: coral;
  width: 96%;
  height: calc(70px * 8);
  overflow-y: scroll;
  display: block;
  padding: 0;
}

.button {
  position: relative;
  background-color: cornflowerblue;
  width: 375rpx;
  height: 60px;
  box-sizing: border-box;
  margin: 10px;
  color: snow;
  font-size: larger;
  text-align: center;
  line-height: 50px;
  border-radius: 30px;
  border: 5px solid snow;

  transition: 0.1s left linear;


}

.shift80 {
  left: 140px;
  transition: 0.1s left linear;

}

.shift60 {
  left: 80px;
  transition: 0.1s left linear;
}

.shift40 {
  left: 40px;
  transition: 0.1s left linear;

}

.shift20 {
  left: 20px;
  transition: 0.1s left linear;

}